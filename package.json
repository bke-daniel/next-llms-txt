{
  "name": "next-llms-txt-project",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev -w next-llms-txt",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit -w next-llms-txt",
    "test:watch": "npm run test:watch -w next-llms-txt",
    "test:coverage": "npm run test:coverage -w next-llms-txt",
    "test:coverage:ci": "npm run test:coverage:ci -w next-llms-txt",
    "test:e2e": "npm run test:e2e -w @next-llms-txt/cypress-tests",
    "test:e2e:dev": "npm run test:dev -w @next-llms-txt/cypress-tests",
    "server:test": "npm run dev -w nextjs-test-server-app-router -- -p 3001",
    "server:demo": "npm run dev -w @next-llms-txt/demo-server",
    "server:demo:open": "open http://localhost:3000 && npm run server:demo",
    "server:demo:build": "npm run build -w @next-llms-txt/demo-server",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "cypress:open": "npm run cypress:open -w cypress-tests",
    "cypress:run": "npm run cypress:run -w cypress-tests",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
