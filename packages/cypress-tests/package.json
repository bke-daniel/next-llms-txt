{
  "name": "cypress-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Cypress E2E tests for next-llms-txt",
  "type": "module",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "concurrently -k -n server,cypress -c blue,green \"npm run server:dev\" \"npm run cypress:run\"",
    "server:dev": "npm run dev -w nextjs-e2e-test-server"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cypress": "^15.6.0"
  }
}
