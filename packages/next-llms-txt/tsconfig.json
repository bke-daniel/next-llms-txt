{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/test/constants": [
        "./tests/constants.ts"
      ],
      "@/src/*": [
        "./src/*"
      ]
    },
    "types": [
      "cypress",
      "vitest"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
