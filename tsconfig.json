{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/test/constants": [
        "./tests/constants.ts"
      ],
      "@/src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "cypress"
    ],
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
